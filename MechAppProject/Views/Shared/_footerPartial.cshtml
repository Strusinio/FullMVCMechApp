<footer class="sticky-footer copyright py-4 text-center text-white">
    <div class="container">
        <small class="pre-wrap">Copyright © MechApp @DateTime.Now.Year</small>
    </div>
</footer>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Czy napewno chcesz się wylogować?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Wybierz wyloguj aby wylogować się z sesji.</div>
            <div class="modal-footer">


                @if (Session["Login"] != null)
                {

                    <a class="btn btn-primary" href="@Url.Action("CustomerLogout", "Account")">Wyloguj</a>
                }
                else if (Session["LoginWorkshop"] != null)
                {
                    <a class="btn btn-primary" href="@Url.Action("LogoutWorkshop", "Account")">Wyloguj</a>
                }
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Wróć</button>
            </div>
        </div>
    </div>
</div>
