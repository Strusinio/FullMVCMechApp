@model MechAppProject.Models.CustomerModel

@{
    ViewBag.Title = "CustomerProfile";
}



<div class="container navspace">

    <!-- Outer Row -->
    <div class="row justify-content-center">

        <div class=" col-lg-12 col-md-9">

            <div class="card o-hidden border-0 shadow-lg my-5">
                <div class="card-body p-0">
                    <!-- Nested Row within Card Body -->
                    <div class="row">
                        <div class="col-sm-4 bg-secondary">
                            <!--left col-->
                            <div class="pt-5 pb-5">
                                <div class="user-info">
                                    <img class="rounded-circle img-responsive img-fluid img-profile mx-auto d-block" src="~/Content/img/profile.png" alt="">
                                    <br/>
                                    <div class="form-inline">
                                        <form>
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input text-left" id="customFile">
                                                <label class="custom-file-label" for="customFile">Choose file</label>
                                            </div>
                                        </form>
                                    </div>
                                </div>

                                <br />
                                
                                <div class="map-box">
                                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d470029.1604841957!2d72.29955005258641!3d23.019996818380896!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x395e848aba5bd449%3A0x4fcedd11614f6516!2sAhmedabad%2C+Gujarat!5e0!3m2!1sen!2sin!4v1493204785508" width="100%" height="150" frameborder="0" style="border:0" allowfullscreen=""></iframe>
                                </div>

                            </div>
                        </div><!--/col-3-->

                        <div class="col-sm-8">
                            <div class="pt-5 p-4">
                                <ul class="nav nav-tabs">
                                    <li class="nav-item">
                                        <a class="nav-link active" data-toggle="tab" href="#profile">Dane</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#edit">Edycja</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" data-toggle="tab" href="#settings">Ustawienia</a>
                                    </li>
                                </ul>


                                <div class="tab-content">
                                    <div class="tab-pane active" id="profile">
                                        <br />

                                        <table>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.Login)
                                                    @Model.Login
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.Password)
                                                    @Model.Password
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.Email)
                                                    @Model.Email
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.Name)
                                                    @Model.Name
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.Surname)
                                                    @Model.Surname
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.City)
                                                    @Model.City
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.Street)
                                                    @Model.Street
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.StreetNbr)
                                                    @Model.StreetNbr
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.ZipCode)
                                                    @Model.ZipCode
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    @Html.LabelFor(model => model.PhoneNbr)
                                                    @Model.PhoneNbr
                                                </td>
                                            </tr>
                                        </table>

                                    </div><!--/tab-pane-->

                                    <div class="tab-pane" id="edit">
                                        <br />
                                        @using (Html.BeginForm("CustomerProfileEdit", "Account", FormMethod.Post))
                                        {
                                            <fieldset>
                                                <legend>
                                                    Edycja danych:
                                                </legend>
                                                <table>
                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.Password)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.Password)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.Email)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.Email)
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.Name)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.Name)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.Surname)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.Surname)
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.City)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.City)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.Street)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.Street)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.StreetNbr)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.StreetNbr)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.ZipCode)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.ZipCode)
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td>
                                                            @Html.LabelFor(model => model.PhoneNbr)
                                                        </td>
                                                        <td>
                                                            @Html.TextBoxFor(model => model.PhoneNbr)
                                                        </td>
                                                    </tr>


                                                </table>
                                                <button type="submit">Zapisz</button>
                                            </fieldset>
                                        }
                                    </div>

                                    <div class="tab-pane" id="settings">
                                        <br />

                                        Ustawienia

                                    </div><!--/tab-pane-->
                                </div><!--/tab-pane-->
                            </div><!--/tab-content-->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
