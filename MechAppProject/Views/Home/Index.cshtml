@{
    ViewBag.Title = "Home Page";
}

<header class="masthead bg-secondary text-white">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <h2 class="page-section-heading d-inline-block text-white">@ViewBag.Message</h2>
        </div>
        <div class="searchbar">
            @using (Html.BeginForm("Search", "Home", FormMethod.Get))
            {
                <input class="search_input" id="SearchString" type="text" name="SearchString" placeholder="Wpisz miasto w którym szukasz pomocy...">
                <button type="submit" value="Filter" class="search_icon btn">
                    <i class="fas fa-search"></i>
                </button>
            }
        </div>

    </div>
</header>

<section class="page-section portfolio">
    <div class="container">
        <!-- About Section Heading-->
        <div class="row justify-content-center mb-5">
            <h2 class="page-section-heading d-inline-block text-secondary">PROJEKT</h2>
        </div>

        <br />
        <div class="row">
            <h6 class="mx-5 text-center text-black-50">Celem projektu jest stworzenie systemu dla małych firm zajmujących się mechaniką samochodową pozwalający firmie na obsługę zleceń tzn. ich przyjmowanie, aktualizację czy pośredni kontakt z klientem. Klientowi zaś będzie pozwalał na zlecenie usługi, pośrednią interakcję z firmą oraz monitorowanie stanu usługi.</h6>
        </div>

    </div>
</section>

<section class="page-section bg-primary text-white mb-0">
    <div class="container">
        <!-- Contact Section Heading-->
        <div class="row justify-content-center mb-5">
            <h2 class="page-section-heading text-white d-inline-block mb-0">ZESPÓŁ</h2>
        </div>

        <div class="mt-5 row">
            <div class="col-lg-6 text-center">
                <img class="mb-2 img-fluid rounded-circle" src="~/Content/img/sp.jpg" width="200px" />
                <h3>Stanisław Posmyk</h3>
                <p>Frontend</p>

            </div>
            <div class="col-lg-6 text-center">
                <img class="mb-2 img-fluid rounded-circle" src="~/Content/img/pk.jpg" width="200px" />
                <h3>Patryk Kaszubowski</h3>
                <p>Backend</p>
            </div>
        </div>
    </div>
</section>

<section class="page-section">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <h2 class="page-section-heading d-inline-block text-secondary">INFORMACJE</h2>
        </div>
        
        <br />
        <div class="row">
            <p class="mx-5 text-center">Celem projektu jest stworzenie systemu dla małych firm zajmujących się mechaniką samochodową pozwalający firmie na obsługę zleceń tzn. ich przyjmowanie, aktualizację czy pośredni kontakt z klientem. Klientowi zaś będzie pozwalał na zlecenie usługi, pośrednią interakcję z firmą oraz monitorowanie stanu usługi.</p>
        </div>
    </div>
</section>

